<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- PermissÃµes -->
    <uses-feature android:name="android.hardware.camera" android:required="true"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:networkSecurityConfig="@xml/network_security"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/cook"
        android:label="@string/app_name"
        android:roundIcon="@drawable/cook"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppDam"
        tools:targetApi="31">

        <!-- LoginActivity configurada como tela inicial -->
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="locked"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- RegisterActivity -->
        <activity
            android:name=".RegisterActivity"
            android:screenOrientation="locked"
            android:exported="true" />

        <!-- MainActivity -->
        <activity
            android:name=".MainActivity"
            android:screenOrientation="locked"
            android:exported="true" />

        <activity
            android:name=".ReceitasActivity"
            android:screenOrientation="locked"
            android:exported="true" />

        <activity
            android:name=".AboutActivity"
            android:screenOrientation="locked"
            android:exported="true" />

        <!-- DetailActivity -->
        <activity
            android:name=".DetailActivity"
            android:screenOrientation="locked" />


        <activity
            android:name=".receitasuser.AddReceitaActivity"
            android:screenOrientation="locked"
            android:exported="true" />

        <activity
