<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollEditReceita"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.appdam.receitasuser.EditReceitaActivity"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título da Receita -->
        <EditText
            android:id="@+id/etTituloEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Título da Receita" />

        <!-- Preview da Câmera -->
        <androidx.camera.view.PreviewView
            android:id="@+id/previewViewEdit"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="16dp" />

        <!-- Botão para tirar a foto -->
        <Button
            android:id="@+id/btnTirarFotoEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tirar Foto" />

        <!-- Aqui exibimos a foto capturada -->
        <ImageView
            android:id="@+id/ivFotoReceitaEdit"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

        <!-- Ingredientes -->
        <EditText
            android:id="@+id/etIngredientesEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Ingredientes" />

        <!-- Modo de Preparo -->
        <EditText
            android:id="@+id/etPreparoEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Modo de Preparo"
            android:minLines="5"
            android:gravity="top"/>

        <!-- Botões de salvar e eliminar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSalvarEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Guardar" />

            <Button
                android:id="@+id/btnEliminar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Eliminar" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
