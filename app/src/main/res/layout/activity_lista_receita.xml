<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.appdam.receitasuser.ListaReceitaActivity">

    <!-- RecyclerView para listar receitas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvReceitas"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- BotÃ£o flutuante para adicionar receita -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddReceita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:src="@drawable/btn_add"
        android:contentDescription="Adicionar receita" />

</RelativeLayout>
